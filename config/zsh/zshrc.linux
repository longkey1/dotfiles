# no create core dump file
ulimit -c 0

# nproc
alias nproc="grep processor /proc/cpuinfo | wc -l"

# git/diff-highlight for arch
[[ -d /usr/share/git/diff-highlight ]] && export PATH=${PATH}:/usr/share/git/diff-highlight
# git/diff-highlight for debian or ubuntu
[[ -d /usr/share/doc/git/contrib/diff-highlight ]] && export PATH=${PATH}:/usr/share/doc/git/contrib/diff-highlight

# tmux
if type tmux &> /dev/null; then
  alias tmux="tmux -f ${XDG_CONFIG_HOME}/tmux/tmux.conf"
fi
